<div class="card">
  <div class="card-header">
    {{model.character.name}} 
    {{#if model.currentCard}}
      (Card #{{model.currentCard.number}})
    {{/if}}
  </div>
  <ul class="list-group list-group-flush">
    {{#if model.currentCard }}
      <CardSection @title="Planning" @subtitle="Do 1st that applies!" @steps={{model.currentCard.planning}} />
      <CardSection @title="Action" @subtitle="Do all that apply!" @steps={{model.currentCard.action}} />
      <CardSection @title="Encounter" @subtitle="Do 1st that applies!" @steps={{model.currentCard.encounter}} />
      {{#if model.character.ship}}
        <CardSection @title="Ship Special" @steps={{model.character.ship}} />
      {{/if}}
      {{#if model.currentCard.special}}
        <CardSection @title="Special" @steps={{model.currentCard.special}} />
      {{/if}}
    {{else}}
      {{#if model.character.notes}}
        <CardSection @title="Character Notes" @steps={{model.character.notes}} />
      {{/if}}
    {{/if}}
  </ul>

  <div class="card-body">
    <button {{action "drawCard"}} class="btn btn-primary">Draw</button>
  </div>
</div>
